{{ 'Header1.css' | asset_url | stylesheet_tag }}
  <header class="header">
      <div class="header1__user-account">
        <a href="{{ routes.cart_url }}"><i class="fas fa-shopping-cart"></i></a>
        {%- if shop.customer_accounts_enabled -%}
         <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"><i class="fas fa-user"></i></a>
        {%- endif -%}
      </div>
    <div class="header header1">
        <input class="header1__side-menu" name="slide" type="radio" id="side-menu"/>
        <input class="header1__side-menu" name="slide" type="radio" id="close-menu"/>
        <input class="header1__side-menu" type="radio" id="open-menu"/>
        <ul class="header1__collections-nav">
            <label class="header1__close" for="close-menu"><i class="fas fa-times"></i></label>
        {%- if section.settings.menu != blank -%}
            {%- for link in section.settings.menu.links -%}
            {%- if link.links == blank -%}
                <li class="header1__collection-link"><a href="{{ link.url }}">{{- link.title | escape -}}</a></li>
            {%- else -%}
                <li class="header1__collection-link">
                <label class="header1__open" for="open-menu"><i class="fas fa-chevron-down"></i></label>
                <a href="{{ link.url }}">{{- link.title | escape -}}</a>
                    <ul class="collection-link__sub-links">
                    {%- for childlink in link.links -%}
                        <li><a href="{{ childlink.url }}">{{- childlink.title | escape -}}</a></li>
                    {%- endfor -%}
                    </ul>
                </li>
            {%- endif -%}
            {%- endfor -%}
        {%- endif -%}
        </ul>

        <div class="header1__logo">
        <a href="{{ routes.root_url }}">
            {%- if section.settings.logo != blank -%}
            <div class="header__heading-logo-wrapper">
                {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}
                {%- assign logo_height = section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio -%}
                {% capture sizes %}(max-width: {{ section.settings.logo_width | times: 2 }}px) 50vw, {{ section.settings.logo_width }}px{% endcapture %}
                {% capture widths %}{{ section.settings.logo_width }}, {{ section.settings.logo_width | times: 1.5 | round }}, {{ section.settings.logo_width | times: 2 }}{% endcapture %}
                {{
                section.settings.logo
                | image_url: width: 600
                | image_tag:
                    class: 'header__heading-logo motion-reduce',
                    widths: widths,
                    height: logo_height,
                    width: section.settings.logo_width,
                    alt: logo_alt,
                    sizes: sizes,
                    preload: true
                }}
            </div>
        {%- else -%}
            {{ shop.name }}
        {%- endif -%}
        </a>
    </div>
        <ul class="header1__collections-nav">
        {%- if section.settings.menu_two != blank -%}
            {%- for link in section.settings.menu_two.links -%}
            {%- if link.links == blank -%}
                <li class="header1__collection-link"><a href="{{ link.url }}">{{- link.title | escape -}}</a></li>
            {%- else -%}
                <li class="header1__collection-link">
                <a href="{{ link.url }}">{{- link.title | escape -}}<i class="fas fa-chevron-down"></i></a>

                    <ul class="collection-link__sub-links">
                    {%- for childlink in link.links -%}
                        <li><a href="{{ childlink.url }}">{{- childlink.title | escape -}}</a></li>
                    {%- endfor -%}
                    </ul>
                </li>
            {%- endif -%}
            {%- endfor -%}
        {%- endif -%}
        </ul>
        <label class="header1__mobile" for="side-menu"><i class="fas fa-bars"></i></label>
    </div>
  </header>


  <script src="{{  'zepto.min.js' | asset_url }}"></script>
  <script>

  // Get Body Element
  const bodyTag = $('body');
  const headerWrapper = $('#shopify-section-sections--18573047267421__header');
  // check for class fixed-nav
  if(bodyTag.hasClass('fixed-nav')) {
      // change styles of header wrapper
      headerWrapper.css('position', 'fixed')
      headerWrapper.css('top', 0);
      headerWrapper.css('left',  0);
      headerWrapper.css('width', '100%');
      headerWrapper.css('zIndex', '7');

      if(bodyTag.hasClass('transparent-nav')) {
        //remove class of transparent bg onscroll
        const onScroll = () => {
          const scrollLocation = document.documentElement.scrollTop;

          if(scrollLocation > 5) {
            bodyTag.removeClass('transparent-nav')
          } else {
              bodyTag.addClass('transparent-nav')
              }
          }
          window.addEventListener('scroll', onScroll)
      }
  }
  </script>

